{
  "dashboard": {
    "title": "ATOM Intents Monitoring",
    "tags": ["atom-intents", "cosmos", "defi"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Intent Metrics",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "rate(atom_intents_received_total[5m])",
            "legendFormat": "Intents Received/sec",
            "refId": "A"
          },
          {
            "expr": "rate(atom_intents_matched_total[5m])",
            "legendFormat": "Intents Matched/sec",
            "refId": "B"
          },
          {
            "expr": "rate(atom_intents_failed_total[5m])",
            "legendFormat": "Intents Failed/sec",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "label": "Rate",
            "show": true
          },
          {
            "show": true
          }
        ]
      },
      {
        "id": 2,
        "title": "Active Intents",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "atom_intents_active",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        }
      },
      {
        "id": 3,
        "title": "Active Settlements",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "targets": [
          {
            "expr": "atom_settlements_active",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        }
      },
      {
        "id": 4,
        "title": "Settlement Duration",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(atom_settlement_duration_ms_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(atom_settlement_duration_ms_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(atom_settlement_duration_ms_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "label": "Duration (ms)",
            "show": true
          },
          {
            "show": true
          }
        ]
      },
      {
        "id": 5,
        "title": "Settlement Success Rate",
        "type": "gauge",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        },
        "targets": [
          {
            "expr": "rate(atom_settlements_completed_total[5m]) / (rate(atom_settlements_completed_total[5m]) + rate(atom_settlements_failed_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "red"
                },
                {
                  "value": 90,
                  "color": "yellow"
                },
                {
                  "value": 95,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Solver Quote Latency",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(atom_solver_quote_latency_ms_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(atom_solver_quote_latency_ms_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(atom_solver_quote_latency_ms_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "label": "Latency (ms)",
            "show": true
          },
          {
            "show": true
          }
        ]
      },
      {
        "id": 7,
        "title": "Active Solvers",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 12
        },
        "targets": [
          {
            "expr": "atom_solvers_active",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "IBC Transfer Latency",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(atom_ibc_transfer_latency_ms_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(atom_ibc_transfer_latency_ms_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(atom_ibc_transfer_latency_ms_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "label": "Latency (ms)",
            "show": true
          },
          {
            "show": true
          }
        ]
      },
      {
        "id": 9,
        "title": "IBC Metrics",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "targets": [
          {
            "expr": "rate(atom_ibc_packets_sent_total[5m])",
            "legendFormat": "Packets Sent/sec",
            "refId": "A"
          },
          {
            "expr": "rate(atom_ibc_packets_acked_total[5m])",
            "legendFormat": "Packets Acked/sec",
            "refId": "B"
          },
          {
            "expr": "rate(atom_ibc_timeouts_total[5m])",
            "legendFormat": "Timeouts/sec",
            "refId": "C"
          }
        ]
      },
      {
        "id": 10,
        "title": "Oracle Query Latency",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(atom_oracle_latency_ms_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(atom_oracle_latency_ms_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(atom_oracle_latency_ms_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "label": "Latency (ms)",
            "show": true
          },
          {
            "show": true
          }
        ]
      },
      {
        "id": 11,
        "title": "Oracle Failures",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 32
        },
        "targets": [
          {
            "expr": "rate(atom_oracle_failures_total[5m])",
            "legendFormat": "Failures/sec",
            "refId": "A"
          }
        ]
      },
      {
        "id": 12,
        "title": "Total Value Locked",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 32
        },
        "targets": [
          {
            "expr": "atom_total_value_locked",
            "legendFormat": "{{denom}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Amount",
            "show": true
          },
          {
            "show": true
          }
        ]
      }
    ]
  }
}
